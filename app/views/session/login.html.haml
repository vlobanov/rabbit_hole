:css
  body {
    background-color:#EEE;
  }
  #login {
    width:500px;
    background-color:#FFF;
    border:2px solid #444;
    border-radius:10px;
    text-align:center;
    margin-left:auto;
    margin-right:auto;
    margin-top:200px;
  }

  .error {
    color: red;
    margin-bottom:40px;
  }
#login
  - if @error
    .error=@error
  =form_tag(begin_session_path) do
    - if RabbitHole.use_password_field
      = password_field_tag 'password'
    - else
      = text_field_tag 'password'
    %br
    = submit_tag "login"